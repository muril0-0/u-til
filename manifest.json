{
    "manifest_version": 2,
    "name": "U-Tils",
    "version": "1.0",

    "permisions": [
        "http://*/*",
        "https://*/*",
        "activeTab"
    ],

    "browser_action": {
        "default_icon": "./assets/logo-light.png",
        "theme_icons": [{
            "light": "./assets/logo-light.png",
            "dark": "./assets/logo-dark.png",
            "size": 32
        }],
        "default_title": "U-Tils",
        "default_popup": "./public/popup.html"
    }
}